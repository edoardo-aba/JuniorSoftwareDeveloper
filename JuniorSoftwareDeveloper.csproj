<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Disable SDK-generated AssemblyInfo to prevent duplicates -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <!-- Exclude any .cs under JuniorSoftwareDeveloper.Tests from the API build -->
  <ItemGroup>
    <Compile Remove="JuniorSoftwareDeveloper.Tests\**\*.cs" />
  </ItemGroup>

</Project>
